server.modules = (
  "mod_cgi",
  "mod_fastcgi"
)

$HTTP["host"] =~ "^.*$" {
	server.document-root = "@pkgdatadir@/"
	index-file.names = ( "index.dhtml" )

	mimetype.assign = (
	  ".css" => "text/css",
	  ".jpeg" => "image/jpeg",
	  ".png" => "image/png",
	)

	static-file.exclude-extensions = ( ".dhtml", ".inc" )
	server.port = 80
	cgi.assign = ( ".dhtml" => "" )

	fastcgi.server = (
		"/sendfile/" => (
			"fastcgi.sendfile" => (
				"socket" => "/var/run/sendfile.socket",
				"check-local" => "disable",
				"bin-path" => "/usr/bin/sendfile-fcgi",
				"max-procs" => 1,
				"allow-x-send-file" => "enable",
			)
		)
	)
}
